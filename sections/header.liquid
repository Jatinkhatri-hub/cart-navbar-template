{{ 'header.css' |  asset_url |  stylesheet_tag }}
<script src="{{ 'section-header.js' |  asset_url }}" defer></script>
{% comment %} <script src="{{ 'cart-drawer-dd.js' |  asset_url }}" defer></script> {% endcomment %}
<style>
  @font-face {
    font-family: 'Avenir Regular';
    src: url('{{'avenir-regular.woff2' |  asset_url }}');
  }
</style>

<header class="nav-bar__container color-{{ section.settings.color_scheme }} 

 ">
  <div class="nav-bar__items">
    <div class="nav-drawer__open-btn">{{ 'icon-hamburger-3.svg' | inline_asset_content}}</div>
    <a href="/">
      <img src="{{ section.settings.brand_logo |  img_url: 'medium'  }}" alt="{{ site.name }}" class="nav-bar__brand-logo">
    </a>
    <ul class="nav-bar__menu close">
      <div class="nav-drawer__close-btn"> {{ 'icon-close.svg' | inline_asset_content }} </div>
      {% for link in section.settings.navigation.links %}
        <li class="nav-bar__menu-item">
          <a href="{{ link.url }}">{{ link.title }}</a>
        </li>
      {% endfor %}
    </ul>
    <div>

      <a href="{{ routes.a }}">

      </a>
      
      <a 
        class="nav-bar__cart-open-btn">
        {{ 'icon-shopping-bag.svg' | inline_asset_content }} 
      </a>
    </div>
  </div>
</header>


{%  schema  %} 
  {
    "name": "header",
    "class": "section-header",
    "settings": [
      {
        "type": "image_picker",
        "id": "brand_logo",
        "label": "Header Logo"
      },
      {
        "type": "link_list",
        "id": "navigation",
        "label": "Navigation Menu",
        "default": "main-menu"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:section.all.colors.label",
        "default": "scheme-1"
      },
      {
        "type": "header",
        "content": "Sticky Header"
      },
      {
        "type": "select",
        "id": "header_position",
        "label": "Header Position",
        "options":  [
          {
            "value": "always",
            "label": "Show Always"
          },
          {
            "value": "scroll_up",
            "label": "Show on Scroll Up"
          },
          {
            "value": "none",
            "label": "None"
          }
        ],
        "default": "always"
      }
    ]
  }
{% endschema %}